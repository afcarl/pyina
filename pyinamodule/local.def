# -*- Makefile -*-
#

# for CITerra (myrinet, lib64)
ifeq (x86_64,$(findstring x86_64,$(HOSTNAME)))
    PROJ_LCXX_FLAGS += -L/usr/lib64 -lgm
endif

# Use RPATH ?
ifneq ($(PROJ_RPATH),)
    # Add -rpath option to loader command
    PROJ_LCXX_FLAGS += -Wl,-rpath -Wl,$(PROJ_RPATH)
endif

ifeq (AIX,$(findstring AIX,$(PLATFORM_ID)))
    PROJ_LCXX_FLAGS += -Wl,-bE:$(PYTHON_LIBDIR)/config/python.exp
endif

# End of file

